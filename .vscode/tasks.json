{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C++ File",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++20", // 指定C++标准版本
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}" // 注意这里不带 .exe 后缀
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compile with g++ in WSL"
        }
    ]
}